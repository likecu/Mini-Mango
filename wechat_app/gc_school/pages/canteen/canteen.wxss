page {
    background-color: #fff;
}

.tops {
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 10rpx;
    display: flex;
    flex-wrap: wrap;
}

.contents,.tops {
    justify-content: space-between;
}

.contents {
    width: 48%;
    align-items: center;
    margin-bottom: 40rpx;
}

.contents image {
    width: 100%;
    height: 200rpx;
    border-radius: 10rpx;
}

.title {
    font-size: 30rpx;
    width: 100%;
    margin-top: 20rpx;
}

.nodatas {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    color: #000;
    font-size: 30upx;
}

.bgmain {
    background-color: #ff6344;
}

.bgmain,.cuIcon-back {
    color: #fff;
}

.cuIcon-right {
    font-size: 36rpx;
}

.slide_box {
    position: relative;
    background-color: #fff;
}

.indicator-dots {
    width: 100%;
    position: absolute;
    bottom: 30rpx;
    left: 0;
    display: flex;
    justify-content: center;
}

.indicator-dots view {
    width: 12rpx;
    height: 12rpx;
    background: #d1d1d1;
    margin: 0 5rpx;
    border-radius: 50%;
}

.indicator-dots view.dots_on {
    background: #fff;
}

.cate_box {
    display: flex;
    white-space: nowrap;
    overflow-x: scroll;
    margin: 30rpx 30rpx 20rpx;
}

.cate_box .cate_item {
    background: #f9f9f9;
    color: #000;
    font-size: 26rpx;
    padding: 15rpx 30rpx;
    margin: 0 35rpx 0 0;
    border-radius: 5rpx;
}

.cate_active {
    background: #fff0ed!important;
    color: #fe4f2d!important;
}

.goods_item {
    border-bottom: 1rpx solid #f2f2f2;
}

.goods_img {
    width: 200rpx;
    height: 170rpx;
    border-radius: 20rpx;
    flex-shrink: 0;
}

.name {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 500rpx;
}

.right_content {
    flex-direction: column;
    margin: 15rpx 20rpx;
}

.right_content view {
    line-height: 50rpx;
}