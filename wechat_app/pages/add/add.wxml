<view>
  <navbar title="选择一个主题" loading="{{true}}" home="{{true}}" back="{{true}}"></navbar>
</view>
<scroll-view scroll-y="{{true}}" style="height: calc(100vh - 34px - {{navTop+'px'}});">
  <view class="topic_item">
    <block wx:for="{{themeMessage}}" wx:key="huangxin">
      <view class="item" bind:tap="add_detail" id="{{item.themeId}}" hidden="{{item.themeId==4}}">
        <!-- <image src="{{item.themeImage}}" mode="widthFix" /> -->
        <view class="topic_main_title" style="color: dodgerblue;">{{item.themeTitle}}</view>
      </view>
    </block>
  </view>
</scroll-view>
<view class="bottom">
  <view bindtap="add_detail" id="-1">
    <button class="button">创作</button>
  </view>
</view>