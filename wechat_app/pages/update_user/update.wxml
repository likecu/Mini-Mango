<view>
  <navbar title="修改个人信息" loading="{{true}}" home="{{true}}" back="{{true}}"></navbar>
</view>

<form bindsubmit="submit">
  <!-- <view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
