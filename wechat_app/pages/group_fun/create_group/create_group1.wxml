<view>
  <navbar title="创建小组" loading="{{true}}" home="{{true}}" back="{{true}}"></navbar>
</view>

<form bindsubmit="submit">
  <!-- <view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
